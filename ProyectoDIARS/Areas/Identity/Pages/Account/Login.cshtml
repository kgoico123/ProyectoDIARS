@page
@model LoginModel

@{
    ViewData["Title"] = "Ingreso al Portal Escolar";
}

<!-- Fondo degradado con colores del logo -->
<div class="min-h-full flex items-center justify-center bg-white to-red-700 relative overflow-hidden">
    <!-- Card compacta y centrada -->
    <div
        class="w-full max-w-lg rounded-2xl shadow-2xl backdrop-blur-xl bg-white/90 border border-gray-200 p-6 flex flex-col items-center animate-fadeInUp">
        <!-- Logo institucional -->
        <div
            class="w-24 h-24  rounded-full bg-white flex items-center justify-center shadow-lg border-4 border-green-600 animate-bounceIn">
            <img src="/images/logo.png" alt="Logo I.E. Micaela Bastidas" class="w-20 h-20 object-contain" />
        </div>
        <h2 class="text-2xl font-bold text-green-800 text-center ">I.E. Micaela Bastidas</h2>
        <p class="text-gray-700 text-sm text-center">Accede con tu cuenta institucional</p>
        <form id="account" method="post" class="w-full space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-xs mb-2" role="alert"></div>
            <div>
                <label asp-for="Input.Dni" class="block text-green-900 font-semibold mb-1 text-sm">DNI</label>
                <input asp-for="Input.Dni"
                    class="w-full px-3 py-2 rounded-lg bg-gray-100 text-gray-900 placeholder-gray-400 border border-green-300 focus:outline-none focus:ring-2 focus:ring-green-600 transition"
                    autocomplete="username" aria-required="true" placeholder="DNI" />
                <span asp-validation-for="Input.Dni" class="text-red-500 text-xs"></span>
            </div>
            <div>
                <label asp-for="Input.Password"
                    class="block text-green-900 font-semibold mb-1 text-sm">Contraseña</label>
                <input asp-for="Input.Password" type="password"
                    class="w-full px-3 py-2 rounded-lg bg-gray-100 text-gray-900 placeholder-gray-400 border border-green-300 focus:outline-none focus:ring-2 focus:ring-green-600 transition"
                    autocomplete="current-password" aria-required="true" placeholder="Contraseña" />
                <span asp-validation-for="Input.Password" class="text-red-500 text-xs"></span>
            </div>
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input class="rounded border-green-400 focus:ring-2 focus:ring-green-600"
                        asp-for="Input.RememberMe" />
                    <label class="ml-2 text-green-900 text-sm" asp-for="Input.RememberMe">Recordarme</label>
                </div>
                <a id="forgot-password" asp-page="./ForgotPassword"
                    class="text-xs text-red-700 hover:underline">¿Olvidaste tu contraseña?</a>
            </div>
            <button id="login-submit" type="submit"
                class="w-full py-2 rounded-lg bg-gradient-to-r from-green-700 via-yellow-400 to-red-600 text-white font-bold shadow hover:scale-105 transition transform duration-200">
                Ingresar
            </button>
        </form>
        <div class="mt-4 text-center">
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
                class="text-green-800 hover:underline text-sm">Registrarse como nuevo usuario</a>
        </div>
        <div class="mt-1 text-center">
            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation"
                class="text-green-700 hover:underline text-xs">Reenviar confirmación de correo</a>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    @@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(40px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fadeInUp {
        animation: fadeInUp 1s cubic-bezier(0.23, 1, 0.32, 1) both;
    }

    @@keyframes bounceIn {
        0% {
            opacity: 0;
            transform: scale(0.7);
        }

        60% {
            opacity: 1;
            transform: scale(1.1);
        }

        100% {
            opacity: 1;
            transform: scale(1);
        }
    }

    .animate-bounceIn {
        animation: bounceIn 0.9s cubic-bezier(0.68, -0.55, 0.27, 1.55) both;
    }
</style>
