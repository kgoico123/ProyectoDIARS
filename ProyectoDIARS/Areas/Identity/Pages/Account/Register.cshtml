@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<div class="min-h-screen flex items-center justify-center bg-white/90">
    <div
        class="w-full max-w-md mx-4 rounded-2xl shadow-2xl bg-white border border-green-700 p-8 flex flex-col items-center animate-fadeInUp">
        <!-- Logo institucional -->
        <div
            class="w-24 h-24 mb-3 rounded-full bg-white flex items-center justify-center shadow-lg border-4 border-green-700 animate-bounceIn">
            <img src="/images/logo.png" alt="Logo I.E. Micaela Bastidas" class="w-20 h-20 object-contain" />
        </div>
        <h2 class="text-2xl font-bold text-green-800 mb-1 text-center">Registro de nuevo usuario</h2>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="w-full space-y-4 mt-4">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-xs mb-2" role="alert"></div>
            <div>
                <label asp-for="Input.Email" class="block text-green-900 font-semibold mb-1 text-sm">Correo
                    institucional</label>
                <input asp-for="Input.Email"
                    class="w-full px-3 py-2 rounded-lg bg-gray-100 text-gray-900 placeholder-gray-400 border border-green-300 focus:outline-none focus:ring-2 focus:ring-green-600 transition"
                    autocomplete="username" aria-required="true" placeholder="nombre@colegio.com" />
                <span asp-validation-for="Input.Email" class="text-red-500 text-xs"></span>
            </div>
            <div>
                <label asp-for="Input.Username" class="block text-green-900 font-semibold mb-1 text-sm">Nombre</label>
                <input asp-for="Input.Username"
                    class="w-full px-3 py-2 rounded-lg bg-gray-100 text-gray-900 placeholder-gray-400 border border-green-300 focus:outline-none focus:ring-2 focus:ring-green-600 transition"
                    autocomplete="username" aria-required="true" placeholder="Nombre" />
                <span asp-validation-for="Input.Username" class="text-red-500 text-xs"></span>
            </div>
            <div>
                <label asp-for="Input.Apellido" class="block text-green-900 font-semibold mb-1 text-sm">Apellido</label>
                <input asp-for="Input.Apellido"
                    class="w-full px-3 py-2 rounded-lg bg-gray-100 text-gray-900 placeholder-gray-400 border border-green-300 focus:outline-none focus:ring-2 focus:ring-green-600 transition"
                    autocomplete="username" aria-required="true" placeholder="Apellido" />
                <span asp-validation-for="Input.Apellido" class="text-red-500 text-xs"></span>
            </div>
            <div>
                <label asp-for="Input.Dni" class="block text-green-900 font-semibold mb-1 text-sm">Dni</label>
                <input asp-for="Input.Dni"
                    class="w-full px-3 py-2 rounded-lg bg-gray-100 text-gray-900 placeholder-gray-400 border border-green-300 focus:outline-none focus:ring-2 focus:ring-green-600 transition"
                    autocomplete="username" aria-required="true" placeholder="Dni" />
                <span asp-validation-for="Input.Dni" class="text-red-500 text-xs"></span>
            </div>
            <div>
                <label asp-for="Input.PhoneNumber"
                    class="block text-green-900 font-semibold mb-1 text-sm">Teléfono</label>
                <input asp-for="Input.PhoneNumber"
                    class="w-full px-3 py-2 rounded-lg bg-gray-100 text-gray-900 placeholder-gray-400 border border-green-300 focus:outline-none focus:ring-2 focus:ring-green-600 transition"
                    autocomplete="username" aria-required="true" placeholder="Teléfono" />
                <span asp-validation-for="Input.PhoneNumber" class="text-red-500 text-xs"></span>
            </div>

            <div>
                <label asp-for="Input.Password"
                    class="block text-green-900 font-semibold mb-1 text-sm">Contraseña</label>
                <input asp-for="Input.Password" type="password"
                    class="w-full px-3 py-2 rounded-lg bg-gray-100 text-gray-900 placeholder-gray-400 border border-green-300 focus:outline-none focus:ring-2 focus:ring-green-600 transition"
                    autocomplete="new-password" aria-required="true" placeholder="Contraseña" />
                <span asp-validation-for="Input.Password" class="text-red-500 text-xs"></span>
            </div>
            <div>
                <label asp-for="Input.ConfirmPassword" class="block text-green-900 font-semibold mb-1 text-sm">Confirmar
                    contraseña</label>
                <input asp-for="Input.ConfirmPassword" type="password"
                    class="w-full px-3 py-2 rounded-lg bg-gray-100 text-gray-900 placeholder-gray-400 border border-green-300 focus:outline-none focus:ring-2 focus:ring-green-600 transition"
                    autocomplete="new-password" aria-required="true" placeholder="Confirma tu contraseña" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-xs"></span>
            </div>
            <button id="registerSubmit" type="submit"
                class="w-full py-2 rounded-lg bg-gradient-to-r from-green-700 via-yellow-400 to-red-600 text-white font-bold shadow hover:scale-105 transition transform duration-200">
                Registrarse
            </button>
        </form>
        <div class="mt-6 text-center">
            <span class="text-gray-600 text-sm">¿Ya tienes cuenta?</span>
            <a asp-page="./Login" class="ml-2 text-green-800 hover:text-red-700 font-semibold underline text-sm">Iniciar
                sesión</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    @@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(40px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fadeInUp {
        animation: fadeInUp 1s cubic-bezier(0.23, 1, 0.32, 1) both;
    }

    @@keyframes bounceIn {
        0% {
            opacity: 0;
            transform: scale(0.7);
        }

        60% {
            opacity: 1;
            transform: scale(1.1);
        }

        100% {
            opacity: 1;
            transform: scale(1);
        }
    }

    .animate-bounceIn {
        animation: bounceIn 0.9s cubic-bezier(0.68, -0.55, 0.27, 1.55) both;
    }
</style>