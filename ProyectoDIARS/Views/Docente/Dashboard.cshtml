@model ProyectoDIARS.ViewModels.DocenteDashboardVM
@{
    ViewData["Title"] = "Panel Docente";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.4.1/dist/tailwind.min.css" rel="stylesheet">

<div class="flex flex-col min-h-screen">
    <main class="flex-1 p-6">
        <div class="max-w-3xl mx-auto">
            <div class="rounded-2xl shadow-[8px_8px_16px_#d1d9e6,-8px_-8px_16px_#ffffff] bg-gray-100 mb-8">
                <div
                    class="rounded-t-2xl px-6 py-6 text-2xl font-bold text-gray-700 bg-gray-100 shadow-inner flex items-center gap-3">
                    <i class="fa-solid fa-user-tie text-blue-500"></i>
                    Bienvenido, @Model.docente?.user?.UserName
                </div>
                <div class="px-6 py-6 grid gap-6 md:grid-cols-2">
                    <div
                        class="bg-white rounded-xl shadow-[4px_4px_8px_#d1d9e6,-4px_-4px_8px_#ffffff] p-6 flex flex-col gap-2">
                        <div class="text-lg font-semibold text-blue-700 flex items-center gap-2">
                            <i class="fa-solid fa-chalkboard"></i> Curso Asignado
                        </div>
                        @if (Model.curso != null)
                        {
                            <div><span class="font-semibold text-gray-600">Nombre:</span> @Model.curso.Nombre</div>
                            <div><span class="font-semibold text-gray-600">Sección/Aula:</span> @Model.curso.aula</div>
                            <div><span class="font-semibold text-gray-600">Horario:</span> @Model.curso.HorarioInicio -
                                @Model.curso.HorarioFin</div>
                            <div><span class="font-semibold text-gray-600">Grado:</span> @Model.curso.Grado</div>
                        }
                        else
                        {
                            <div class="text-yellow-700">No tiene un curso asignado actualmente.</div>
                        }
                    </div>
                    <div
                        class="bg-white rounded-xl shadow-[4px_4px_8px_#d1d9e6,-4px_-4px_8px_#ffffff] p-6 flex flex-col gap-2">
                        <div class="text-lg font-semibold text-blue-700 flex items-center gap-2">
                            <i class="fa-solid fa-users"></i> Estudiantes
                        </div>
                        <div>
                            <span class="font-semibold text-gray-600">Cantidad de alumnos:</span>
                            <span class="text-2xl font-bold text-blue-600">@Model.CantidadAlumnos</span>
                        </div>
                    </div>

                    <a href="/Docente/Calificaciones">Subir Calificaciones</a>
                    <a href="/Docente/Conducta">Subir Conductas</a>
                </div>
            </div>
            <div class="rounded-2xl shadow-[8px_8px_16px_#d1d9e6,-8px_-8px_16px_#ffffff] bg-gray-100 p-6">
                <div class="text-lg font-semibold text-gray-700 mb-2 flex items-center gap-2">
                    <i class="fa-solid fa-info-circle text-blue-400"></i> Información general
                </div>
                <ul class="list-disc pl-6 text-gray-600 space-y-1">
                    <li>Desde este panel puede ver información de su curso y estudiantes.</li>
                    <li>Para registrar calificaciones, vaya a la sección <b>Calificaciones</b> del menú.</li>
                    <li>Recuerde que solo puede registrar hasta 4 notas por estudiante (bimestres).</li>
                </ul>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}