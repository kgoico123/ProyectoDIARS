@model ProyectoDIARS.Models.Notificacion
@{
    ViewData["Title"] = "Leer Notificación";

    // Helper para obtener estilos según el tipo de notificación
    (string iconClass, string colorClass) GetTypeStyles(string tipo)
    {
        return tipo?.ToLower() switch
        {
            "académico" => ("fa-solid fa-graduation-cap", "text-blue-500"),
            "conducta" => ("fa-solid fa-gavel", "text-red-500"),
            "general" => ("fa-solid fa-circle-info", "text-gray-500"),
            _ => ("fa-solid fa-bell", "text-indigo-500")
        };
    }
    var styles = GetTypeStyles(Model.Tipo);
}

<div class="min-h-screen p-4 sm:p-6 lg:p-8">
    <div class="max-w-3xl mx-auto">

        <!-- Botón para Volver -->
        <div class="mb-6">
            <a href="@ViewBag.UrlAnterior"
                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd"
                        d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                        clip-rule="evenodd" />
                </svg>
                Volver
            </a>
        </div>

        <!-- Tarjeta de Notificación -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
            <div class="p-6 sm:p-8">

                <!-- Encabezado -->
                <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-4">
                    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-2 sm:mb-0">
                        @Model.Titulo
                    </h1>
                    <span class="text-sm text-gray-500 flex-shrink-0 sm:pt-2">
                        @Model.fecha.ToString("dd 'de' MMMM 'de' yyyy, HH:mm")
                    </span>
                </div>

                <!-- Etiqueta de Tipo -->
                <div class="mb-6">
                    <span
                        class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                        <i class="@styles.iconClass @styles.colorClass mr-2"></i>
                        @Model.Tipo
                    </span>
                </div>

                <!-- Cuerpo del Mensaje -->
                <div class="prose prose-lg max-w-none text-gray-700">
                    <p>
                        @Model.Mensaje
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Asegúrate de tener Font Awesome para los iconos -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}


                       
                       
                       